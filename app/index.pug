doctype html
html(lang="en")
  head
    title HoneyBook Contacts
    // Using Foundation CSS because Abe mentioned that HoneyBook uses (used?) Foundation
    link(rel="stylesheet", href="https://cdn.jsdelivr.net/foundation/6.2.4/foundation.min.css")
    link(rel="stylesheet", href="styles/style.css")
    
    script(src="https://ajax.googleapis.com/ajax/libs/angularjs/1.5.6/angular.min.js")
    script(src="app.js")

  body(ng-app="honeyBookContacts", ng-controller="mainController")
    header
      .row
        .small-12.columns
          .row
            .medium-6.small-12.columns
              h3 Contact List
            .medium-6.small-12.columns
              input(type="text", placeholder="Search...")

    .row.contact-list
      .large-3.medium-4.small-12.columns(ng-repeat="contact in contacts track by $index")
        contact-card(
          profile-image="{{ contact.profile_image }}"
          name="{{ contact.name }}"
          email="{{ contact.email }}"
          company-name="{{ contact.company_name }}"
          icon="{{ contact.icon }}"
          job="{{ contact.job }}"
          phone="{{ contact.phone }}"
        )
